    <div class="platforms">
        <a href="https://instagram.com/mhmmddzen_" target="_blank"><i class="fab fa-instagram"></i> Instagram</a>
        <a href="https://www.tiktok.com/@ismi.zaeny" target="_blank"><i class="fab fa-tiktok"></i> TikTok</a>
        <a href="https://open.spotify.com/user/31dyckcqw5jgxqohiviyhy64byym" target="_blank"><i class="fab fa-spotify"></i> Spotify</a>
        <a href="https://soundcloud.com/zenmgni" target="_blank"><i class="fab fa-soundcloud"></i> SoundCloud</a>
        <a href="https://www.roblox.com/id/users/8967079813/profile" target="_blank">
            <img src="https://upload.wikimedia.org/wikipedia/commons/4/4c/Roblox_Logo_2022.svg" alt="Roblox" class="roblox-icon"> Roblox
        </a>
    </div>

    <!-- Musik SoundCloud (off default) -->
    <iframe id="bg-music" width="0" height="0" scrolling="no" frameborder="0" allow="autoplay"
        src="https://w.soundcloud.com/player/?url=https%3A//soundcloud.com/fxxkgnrs/bkb-mixtape-vol01-vip-setlist-full-breakbeat-kejut-bahu-2-hours&auto_play=false&hide_related=true&show_comments=false&show_user=false&show_reposts=false&visual=false">
    </iframe>

    <script>
        // Memunculkan container platform setelah header muncul
        window.addEventListener('load', () => {
            document.querySelector('.platforms').style.opacity = '1';
        });

        // Tombol Play/Pause dengan status
        const musicToggle = document.getElementById('music-toggle');
        const musicIcon = musicToggle.querySelector('i');
        const musicStatus = musicToggle.querySelector('span');
        const bgMusic = document.getElementById('bg-music').contentWindow;
        let playing = false; // default musik mati

        musicToggle.addEventListener('click', () => {
            if (playing) {
                bgMusic.postMessage('{"method":"pause"}', '*');
                musicIcon.className = 'fas fa-play';
                musicStatus.textContent = 'Play Song';
            } else {
                bgMusic.postMessage('{"method":"play"}', '*');
                musicIcon.className = 'fas fa-pause';
                musicStatus.textContent = 'Pause Song';
            }
            playing = !playing;
        });
    </script>
